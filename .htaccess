# ==================================================================
# KAI STUDIO | INFRASTRUCTURE CONFIG v1.0
# Security - Speed - Clean URLs
# ==================================================================

# 1. CLEAN URLS (Eliminar extensión .html)
# ------------------------------------------------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Forzar HTTPS (Descomentar si el hosting no lo hace automático)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Eliminar .html de la barra de direcciones
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1 [NC,L,R]

    # Redirigir internamente a .html si el archivo existe
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^ %{REQUEST_URI}.html [NC,L]
</IfModule>

# 2. PERFORMANCE (Compresión GZIP)
# ------------------------------------------------------------------
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# 3. BROWSER CACHING (Velocidad para visitantes recurrentes)
# ------------------------------------------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    
    # HTML: Siempre fresco (0 segundos)
    ExpiresByType text/html "access plus 0 seconds"
    
    # Media & CSS/JS: 1 año (Inmutable)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# 4. SECURITY HEADERS (Blindaje básico)
# ------------------------------------------------------------------
<IfModule mod_headers.c>
    # Evita que tu web sea incrustada en iframes de otros (Clickjacking)
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Protege contra ataques de tipo MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Activa protección XSS del navegador
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy (Privacidad)
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# 5. ERROR HANDLING
# ------------------------------------------------------------------
ErrorDocument 404 /404.html