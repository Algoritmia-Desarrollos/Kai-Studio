<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. FORZAR HTTPS (Descomentado y ajustado para Hostinger)
    # Esto asegura que no haya contenido mixto que rompa estilos
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # 2. ELIMINAR EXTENSIÓN .html (De la barra de direcciones)
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1 [NC,L,R=301]

    # 3. MAPEO INTERNO (Hacer que funcione sin extensión)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*)$ $1.html [NC,L]
</IfModule>

# 4. MIME TYPES (Asegurar que el servidor diga "esto es CSS")
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
</IfModule>

# 5. ERROR HANDLING
ErrorDocument 404 /404.html